{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node LTS (22)",
    "_version": "22.0.0",
    "compilerOptions": {
        "lib": [
            "es2023"
        ],
        "module": "esnext",
        "rootDir": "./playground",
        "outDir": "./dist",
        "moduleResolution": "bundler",
        "target": "es2022",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./playground/*"
            ]
        }
    },
    "include": [
        "playground/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
}